{
  "name": "horsa-scheduler",
  "version": "0.5.0",
  "description": "A lightweight and interactive svg scheduler library for web applications",
  "main": "src/index.js",
  "scripts": {
    "start": "yarn run dev",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "prettier --write \"{src/*,tests/*,rollup.config}.js\"",
    "prettier-check": "prettier --check \"{src/*,tests/*,rollup.config}.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/horsa-way/scheduler.git"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "keywords": [
    "scheduler",
    "gantt",
    "svg",
